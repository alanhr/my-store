{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@infrastructure": [
        "src/infrastructure"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@domain": [
        "src/domain"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@application": [
        "src/application"
      ],
    },
  }
}
